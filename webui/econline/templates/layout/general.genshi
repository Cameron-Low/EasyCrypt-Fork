<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/" py:strip="">

<py:match path="head" once="true">
<head py:attrs="select('@*')">
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>

  <title>EasyCrypt Online</title>

  <script src="${chrome('econline:static/jquery/jquery.js')}" type="text/javascript"></script>
  <script src="${chrome('econline:static/jquery/jquery-format.js')}" type="text/javascript"></script>

  <link   href="${chrome('econline:static/twbs/css/bootstrap.css')}" rel="stylesheet" />
  <script src="${chrome('econline:static/twbs/js/bootstrap.js')}" type="text/javascript"></script>

  <link   href="${chrome('econline:static/easycrypt/style.css')}" rel="stylesheet" />
  <script src="${chrome('econline:static/easycrypt/easycrypt.js')}" type="text/javascript"></script>

  ${select('*[local-name()!="title"]')}
</head>
</py:match>

<py:match path="body" once="true">
<body py:attrs="select('@*')">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav navbar-nav">
          <li><a class="brand" href="${url('home')}">EasyCrypt Online</a></li>
          <li><a href="${url('tryme')}">Try me!</a></li>
        </ul>
        <ul class="nav navbar-nav-right pull-right">
          <li><a href="http://ci.easycrypt.info/">Website</a></li>
        </ul>
      </div>
    </div>
  </nav>

  ${select('*|text()')}
</body>
</py:match>
</html>
